{
  "name": "tsoa-api",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "pre-commit": [
    "lint",
    "test:unit"
  ],
  "scripts": {
    "test": "yarn lint && yarn test:unit && yarn test:integration",
    "test:unit": "yarn env:test nyc mocha --timeout 10000 -r ts-node/register ./src/tests/unit/**/*.spec.ts",
    "test:integration": "yarn env:test mocha --timeout 35000 -r ts-node/register ./src/tests/integration/**/*.spec.ts --exit",
    "test:coverage": "yarn test:unit && google-chrome ./coverage/index.html",
    "start": "yarn env:dev ts-node-dev --respawn ./src",
    "build:routes": "tsoa routes",
    "build:swagger": "tsoa swagger --basePath /service",
    "build": "yarn clean && tsc && yarn copy:swagger",
    "copy:swagger": "cp -R ./src/swagger ./dist",
    "lint": "tslint -c \"./tslint.json\" -p \"./tsconfig.json\"",
    "clean": "rm -rf ./dist",
    "env:dev": "cross-env NODE_ENV=development",
    "env:test": "cross-env NODE_ENV=test"
  },
  "author": "Daniel Isaac Geslin <dgeslin@makingsense.com> (https://www.linkedin.com/in/danielisaacgeslin/)",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "inversify": "^4.11.1",
    "inversify-binding-decorators": "^3.2.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.14",
    "mongoose-unique-validator": "^2.0.1",
    "morgan": "^1.9.1",
    "multer": "^1.3.1",
    "mysql": "^2.16.0",
    "mysql2": "^1.6.1",
    "reflect-metadata": "^0.1.12",
    "swagger-ui-express": "^4.0.1",
    "tsoa": "^2.2.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/chai": "^4.1.2",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.12",
    "@types/mongoose-unique-validator": "^1.0.1",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.6",
    "@types/sinon": "^5.0.2",
    "@types/supertest": "^2.0.6",
    "chai": "^4.1.2",
    "cross-env": "^5.1.4",
    "mocha": "^5.0.5",
    "nyc": "^13.0.1",
    "pre-commit": "^1.2.2",
    "sinon": "^6.2.0",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.30",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3",
    "yarn": "^1.9.4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": false,
    "exclude": [
      "src/tests/**",
      "src/ioc.ts",
      "src/setup/**",
      "src/config/MongoDbConnection.ts",
      "src/config/SQLDbConnection.ts",
      "src/models/*Model.ts",
      "src/repositories/sql/entities/**"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ]
  }
}
